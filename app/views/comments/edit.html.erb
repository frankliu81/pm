<h1>Edit Comment</h1>

<%= form_for [@discussion, @comment], html: {class: "form"} do |f| %>

 <div class="form-group discussion-comment">
   <%= f.label :body, "Body", class: "control-label" %>
   <%= f.text_area :body, class: "form-control discussion-comment__textarea" %>
 </div>

 <div class="form-group">
   <%= f.submit "Update Comment", class: "btn btn-primary" %>
 </div>
<% end %>
