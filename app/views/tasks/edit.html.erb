<h1>Edit Task</h1>

<%= @task.errors.full_messages.join(", ") %>

<%= form_for @task, url: project_task_path(@project, @task), method: :patch do |f| %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :due_date %>
    <%= f.datetime_field :due_date %>
  </div>

  <%= f.submit %>

<% end %>
